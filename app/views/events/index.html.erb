<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header">Events List</div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
            <th>Event Name</th>
            <th>Speaker Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Events Address</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.event_name %></td>
              <td><%= event.event_speaker %></td>
              <td><%= event.event_start_time %></td>
              <td><%= event.event_end_time %></td>
              <td><%= event.event_venue_name %></td>
              <td><%= link_to 'Show', event %> | <%= link_to 'Edit', edit_event_path(event) %> | <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

