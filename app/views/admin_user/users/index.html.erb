<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header">Registered Church Admin List</div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Email</th>
              <th>Status</th>
              <th>Name</th>
              <th colspan="2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.approved.present? ? "Approved" : "Pending" %></td>
                <td><%= fullname(user.id) %></td>
                <td><%= link_to 'Show', admin_user_user_path(user) %> | <%= link_to 'Edit', edit_admin_user_user_path(user) %> | <%= link_to 'Destroy', admin_user_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %> <% if !user.approved? %>
                    | <%= link_to 'Approve', member_approval_path(current_user, user), method: :post, data: { confirm: 'Are you sure?' }, id: "member_approval_link" %> <%else%> <%= "" %> <% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>